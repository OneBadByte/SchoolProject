<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:layout_constraintTop_toBottomOf="parent"
    tools:context=".AssignmentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/messageEditText"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:background="@color/blackdartqBlue"
                android:elevation="15dp"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="22sp" />

            <ScrollView
                android:id="@+id/assignmentScrollView"
                android:layout_width="match_parent"
                android:layout_height="671dp"
                android:nestedScrollingEnabled="true">

                <LinearLayout
                    android:id="@+id/assignmentLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addAssignmentButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#9ece9a"
                    android:text="Add"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/modifyAssignmentButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#9ece9a"
                    android:text="Modify"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/deleteAssignmentButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#9ece9a"
                    android:text="Delete"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/backAssignmentButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#9ece9a"
                    android:text="back  "
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>